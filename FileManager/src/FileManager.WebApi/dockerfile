# Stage 1: build
FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src

# Копируем все csproj по отдельности для ускорения кэша (опционально),
# но проще: копируем весь код (context уже корень репо)
COPY . .

# Переходим в папку проекта, собираем и публикуем
WORKDIR /src/FileManager/src/FileManager.WebApi
RUN dotnet restore "FileManager.WebApi.csproj"
RUN dotnet publish "FileManager.WebApi.csproj" -c Release -o /app/publish

# Stage 2: runtime
FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish ./

ENV ASPNETCORE_URLS=http://+:80
EXPOSE 80

ENTRYPOINT ["dotnet", "FileManager.WebApi.dll"]
